<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="Joomla\Plugin\RadicalMartFields\Standard\Field">
	<fieldset name="content">
		<fields name="params">
			<field name="required" type="radio"
				   label="PLG_RADICALMART_FIELDS_STANDARD_REQUIRED"
				   class="btn-group btn-group-yesno"
				   default="0">
				<option value="1">JYES</option>
				<option value="0">JNO</option>
			</field>
			<field name="multiple" type="list"
				   label="PLG_RADICALMART_FIELDS_STANDARD_MULTIPLE"
				   onchange="Joomla.sendForm('field.reload');"
				   default="0">
				<option value="1">JYES</option>
				<option value="0">JNO</option>
			</field>
			<field name="null_value" type="radio"
				   label="PLG_RADICALMART_FIELDS_STANDARD_NULL_VALUE"
				   class="btn-group btn-group-yesno"
				   default="1"
				   showon="multiple:0">
				<option value="1">JYES</option>
				<option value="0">JNO</option>
			</field>
		</fields>
		<field name="options" type="subform"
			   label="PLG_RADICALMART_FIELDS_STANDARD_OPTIONS"
			   multiple="true"
			   layout="joomla.form.field.subform.repeatable-table"
			   min="1"
			   max="1000000"
			   parentclass="stack"
			   required="true">
			<form>
				<field name="text" type="text" label="PLG_RADICALMART_FIELDS_STANDARD_OPTIONS_TEXT" required="true"/>
				<field name="value" type="text"
					   label="PLG_RADICALMART_FIELDS_STANDARD_OPTIONS_VALUE"
					   hint="PLG_RADICALMART_FIELDS_STANDARD_OPTIONS_VALUE_HINT"/>
				<field name="image" type="media"
					   label="PLG_RADICALMART_FIELDS_STANDARD_OPTIONS_IMAGE"
					   preview="false"/>
			</form>
		</field>
	</fieldset>
	<fieldset name="display_products" label="COM_RADICALMART_PARAMS_FIELDS_DISPLAY_FIELD_PRODUCTS">
		<fields name="params">
			<field name="display_products" type="radio"
				   label="COM_RADICALMART_PARAMS_FIELDS_DISPLAY_FIELD_SELECT"
				   class="btn-group btn-group-yesno"
				   default="1">
				<option value="1">JYES</option>
				<option value="0">JNO</option>
			</field>
			<field name="display_products_as" type="list"
				   label="COM_RADICALMART_PARAMS_FIELDS_DISPLAY_FIELD_AS"
				   default="string"
				   showon="display_products:1">
				<option value="string">PLG_RADICALMART_FIELDS_STANDARD_DISPLAY_PRODUCT_AS_STRING</option>
				<option value="list">PLG_RADICALMART_FIELDS_STANDARD_DISPLAY_PRODUCT_AS_LIST</option>
				<option value="images">PLG_RADICALMART_FIELDS_STANDARD_DISPLAY_PRODUCT_AS_IMAGES</option>
			</field>
		</fields>
	</fieldset>
	<fieldset name="display_product" label="COM_RADICALMART_PARAMS_FIELDS_DISPLAY_FIELD_PRODUCT">
		<fields name="params">
			<field name="display_product" type="radio"
				   label="COM_RADICALMART_PARAMS_FIELDS_DISPLAY_FIELD_SELECT"
				   class="btn-group btn-group-yesno"
				   default="1">
				<option value="1">JYES</option>
				<option value="0">JNO</option>
			</field>
			<field name="display_product_as" type="list"
				   label="COM_RADICALMART_PARAMS_FIELDS_DISPLAY_FIELD_AS"
				   default="string"
				   showon="display_product:1">
				<option value="string">PLG_RADICALMART_FIELDS_STANDARD_DISPLAY_PRODUCT_AS_STRING</option>
				<option value="list">PLG_RADICALMART_FIELDS_STANDARD_DISPLAY_PRODUCT_AS_LIST</option>
				<option value="images">PLG_RADICALMART_FIELDS_STANDARD_DISPLAY_PRODUCT_AS_IMAGES</option>
			</field>
		</fields>
	</fieldset>
	<fieldset name="display_filter" label="COM_RADICALMART_PARAMS_FIELDS_DISPLAY_FIELD_FILTER">
		<fields name="params">
			<field name="display_filter" type="radio"
				   label="COM_RADICALMART_PARAMS_FIELDS_DISPLAY_FIELD_SELECT"
				   class="btn-group btn-group-yesno"
				   default="1">
				<option value="1">JYES</option>
				<option value="0">JNO</option>
			</field>
			<field name="display_filter_as" type="list"
				   label="COM_RADICALMART_PARAMS_FIELDS_DISPLAY_FIELD_AS"
				   default="list"
				   showon="display_filter:1">
				<option value="list">PLG_RADICALMART_FIELDS_STANDARD_DISPLAY_FILTER_AS_LIST</option>
				<option value="checkboxes">PLG_RADICALMART_FIELDS_STANDARD_DISPLAY_FILTER_AS_CHECKBOXES</option>
				<option value="images">PLG_RADICALMART_FIELDS_STANDARD_DISPLAY_FILTER_AS_IMAGES</option>
			</field>
		</fields>
	</fieldset>
	<fieldset name="display_variability" label="COM_RADICALMART_PARAMS_FIELDS_DISPLAY_FIELD_VARIABILITY">
		<fields name="params">
			<field name="display_variability" type="radio"
				   label="COM_RADICALMART_PARAMS_FIELDS_DISPLAY_FIELD_SELECT"
				   class="btn-group btn-group-yesno"
				   default="1">
				<option value="1">JYES</option>
				<option value="0">JNO</option>
			</field>
			<field name="display_variability_as" type="list"
				   label="COM_RADICALMART_PARAMS_FIELDS_DISPLAY_FIELD_AS"
				   default="list"
				   showon="display_variability:1">
				<option value="list">PLG_RADICALMART_FIELDS_STANDARD_DISPLAY_VARIABILITY_AS_LIST</option>
				<option value="buttons">PLG_RADICALMART_FIELDS_STANDARD_DISPLAY_VARIABILITY_AS_BUTTONS</option>
				<option value="images">PLG_RADICALMART_FIELDS_STANDARD_DISPLAY_VARIABILITY_AS_IMAGES</option>
			</field>
		</fields>
	</fieldset>
</form>