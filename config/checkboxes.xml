<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="content">
		<fields name="params">
			<field name="required" type="radio"
				   label="PLG_RADICALMART_FIELDS_STANDARD_REQUIRED"
				   class="btn-group btn-group-yesno"
				   default="0">
				<option value="1">JYES</option>
				<option value="0">JNO</option>
			</field>
		</fields>
		<field name="options" type="subform"
			   label="PLG_RADICALMART_FIELDS_STANDARD_OPTIONS"
			   multiple="true"
			   layout="joomla.form.field.subform.repeatable-table"
			   min="1"
			   required="true">
			<form>
				<field name="text" type="text" label="PLG_RADICALMART_FIELDS_STANDARD_OPTIONS_TEXT" required="true"/>
				<field name="value" type="text"
					   label="PLG_RADICALMART_FIELDS_STANDARD_OPTIONS_VALUE"
					   hint="PLG_RADICALMART_FIELDS_STANDARD_OPTIONS_VALUE_HINT"
					   class="input-xlarge"/>
				<field name="image" type="media" label="PLG_RADICALMART_FIELDS_STANDARD_OPTIONS_IMAGE"/>
			</form>
		</field>
	</fieldset>
	<fieldset name="display" label="COM_RADICALMART_DISPLAY">
		<fields name="params">
			<field name="display_product" type="radio"
				   label="COM_RADICALMART_FIELD_DISPLAY_PRODUCT"
				   class="btn-group btn-group-yesno"
				   default="1">
				<option value="1">JYES</option>
				<option value="0">JNO</option>
			</field>
			<field name="display_product_as" type="list"
				   label="PLG_RADICALMART_FIELDS_STANDARD_DISPLAY_PRODUCT_AS"
				   default="string"
				   class="input-xlarge"
				   showon="display_product:1">
				<option value="string">PLG_RADICALMART_FIELDS_STANDARD_DISPLAY_PRODUCT_AS_STRING</option>
				<option value="list">PLG_RADICALMART_FIELDS_STANDARD_DISPLAY_PRODUCT_AS_LIST</option>
				<option value="images">PLG_RADICALMART_FIELDS_STANDARD_DISPLAY_PRODUCT_AS_IMAGES</option>
			</field>
			<field name="display_products" type="radio"
				   label="COM_RADICALMART_FIELD_DISPLAY_PRODUCTS"
				   class="btn-group btn-group-yesno"
				   default="1">
				<option value="1">JYES</option>
				<option value="0">JNO</option>
			</field>
			<field name="display_products_as" type="list"
				   label="PLG_RADICALMART_FIELDS_STANDARD_DISPLAY_PRODUCTS_AS"
				   default="string"
				   class="input-xlarge"
				   showon="display_products:1">
				<option value="string">PLG_RADICALMART_FIELDS_STANDARD_DISPLAY_PRODUCT_AS_STRING</option>
				<option value="list">PLG_RADICALMART_FIELDS_STANDARD_DISPLAY_PRODUCT_AS_LIST</option>
				<option value="images">PLG_RADICALMART_FIELDS_STANDARD_DISPLAY_PRODUCT_AS_IMAGES</option>
			</field>
			<field name="display_filter" type="radio"
				   label="COM_RADICALMART_FIELD_DISPLAY_FILTER"
				   class="btn-group btn-group-yesno"
				   default="1">
				<option value="1">JYES</option>
				<option value="0">JNO</option>
			</field>
			<field name="display_filter_as" type="list"
				   label="PLG_RADICALMART_FIELDS_STANDARD_DISPLAY_FILTER_AS"
				   default="checkboxes"
				   class="input-xlarge"
				   showon="display_filter:1">
				<option value="list">PLG_RADICALMART_FIELDS_STANDARD_DISPLAY_FILTER_AS_LIST</option>
				<option value="checkboxes">PLG_RADICALMART_FIELDS_STANDARD_DISPLAY_FILTER_AS_CHECKBOXES</option>
				<option value="images">PLG_RADICALMART_FIELDS_STANDARD_DISPLAY_FILTER_AS_IMAGES</option>
			</field>
		</fields>
	</fieldset>
</form>